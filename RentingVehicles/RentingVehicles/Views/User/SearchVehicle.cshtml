@model RentingVehicles.Models.SearchModel

@{
    ViewBag.Title = "SearchVehicle";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<h2>SearchVehicle</h2>

@using (Html.BeginForm("SearchVehicle","User")) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
  
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.City, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.City,ViewBag.types as IEnumerable<SelectListItem>, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Category, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Category,ViewBag.types1 as IEnumerable<SelectListItem>, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Click To Search" class="btn btn-default" />
                <br/>
                @ViewBag.msg
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Search","searchresult","User")
</div>
